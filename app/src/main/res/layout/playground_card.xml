<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<androidx.cardview.widget.CardView
    android:orientation="vertical"
    android:layout_margin="12dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="16dp"
    android:layout_marginBottom="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
<ImageView
    android:id="@+id/playground_image"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/darker_grey"
    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
    <TextView
        android:id="@+id/playground_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Al-Yarmouk"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        />

            <TextView
                android:id="@+id/hour_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                style="@style/Text_Profile_subtitle"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="30/hrs"
                android:textColor="@color/colorPrimary"
                android:gravity="end"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            >

            <TextView
                android:id="@+id/playground_place"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/Text_Profile_subtitle"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:text="Amman - alistiqlal" />
            <RatingBar
                android:id="@+id/playground_rating"
                android:layout_marginTop="12dp"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.0"
                android:isIndicator="true"
                android:stepSize="1.0" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView></layout>